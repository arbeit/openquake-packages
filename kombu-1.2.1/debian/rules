#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
#export DH_OPTIONS=-v

%:
	dh $@ 

override_dh_installdocs:
	install -g 0 -o 0 -d debian/python-kombu/usr/share/doc/python-kombu
	cp -a FAQ debian/python-kombu/usr/share/doc/python-kombu
	cp -a README debian/python-kombu/usr/share/doc/python-kombu
	cp -a README.rst debian/python-kombu/usr/share/doc/python-kombu
	cp -a TODO debian/python-kombu/usr/share/doc/python-kombu
	cp -a examples debian/python-kombu/usr/share/doc/python-kombu
	(export PYTHONPATH="`pwd`:."; cd docs ; make html; cd ..; cp -a docs/.build/html debian/python-kombu/usr/share/doc/python-kombu)
	chown -R 0:0 debian/python-kombu/usr/share/doc
	chmod -R go=rX debian/python-kombu/usr/share/doc
	chmod -R u\+rw debian/python-kombu/usr/share/doc
	install -g 0 -o 0 -m 644 -p debian/copyright debian/python-kombu/usr/share/doc/python-kombu/copyright
