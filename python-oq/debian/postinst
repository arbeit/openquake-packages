#!/bin/sh
# postinst script for openquake
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


# create rabbitmq configuration for python-celery
celeryuser_count=`sudo rabbitmqctl list_users | grep celeryuser | wc -l`
if [ $celeryuser_count -eq 0 ];
then
    rabbitmqctl add_user celeryuser celery
fi;
celeryvhost_count=`sudo rabbitmqctl list_vhosts | grep celeryvhost | wc -l`
if [ $celeryvhost_count -eq 0 ];
then
    rabbitmqctl add_vhost celeryvhost
    rabbitmqctl set_permissions -p celeryvhost celeryuser ".*" ".*" ".*"
fi;

mkdir -p /usr/openquake
chmod 1777 /usr/openquake
cp /usr/share/pyshared/openquake/celeryconfig.py /usr/openquake
chmod 666 /usr/openquake/celeryconfig.py

# Is postgres installed on this system?
dpkg-query -l postgresql-8.4 >/dev/null
if [ $? -eq 0 ]; then
    # postgres is installed, is the openquake db in place?
    oq_db_found=`sudo -u postgres psql -l | grep -P '\bopenquake\b' | wc -l`
    if [ $oq_db_found -eq 0 ]; then
        # No openquake db, we need to set it up.
        LOGFILE=/var/log/openquake-db-installation
        sudo -u postgres /usr/bin/create_oq_schema --yes --db-name=openquake --schema-path=/usr/share/pyshared/openquake/db/schema > $LOGFILE 2>&1
        sudo -u postgres psql -c "ALTER ROLE oq_uiapi_writer WITH PASSWORD 'openquake'" >> $LOGFILE 2>&1
        num_of_errors=`grep -i error $LOGFILE | wc -l`
        if [ $num_of_errors -gt 0 ]; then
            echo "Failed to initialise the openquake database"
            echo "Please file a bug here:"
            echo "    https://bugs.launchpad.net/openquake/+filebug"
            echo "and attach this file to it:"
            echo "    $LOGFILE"
            sudo -u postgres psql -c "DROP DATABASE openquake" >/dev/null 2>&1
            exit 1
        fi
        PG_ROOT=/etc/postgresql/8.4/main
        cp $PG_ROOT/pg_hba.conf $PG_ROOT/pg_hba.conf.orig
        echo "local   openquake   oq_uiapi_writer                   md5" > $PG_ROOT/pg_hba.conf
        cat $PG_ROOT/pg_hba.conf.orig | grep -v oq_ >> $PG_ROOT/pg_hba.conf
        /etc/init.d/postgresql reload
    fi
fi
# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
