#!/bin/sh
# postinst script for openquake
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


# create rabbitmq configuration for python-celery
celeryuser_count=`sudo rabbitmqctl list_users | grep celeryuser | wc -l`
if [ $celeryuser_count -eq 0 ];
then
    rabbitmqctl add_user celeryuser celery
fi;
celeryvhost_count=`sudo rabbitmqctl list_vhosts | grep celeryvhost | wc -l`
if [ $celeryvhost_count -eq 0 ];
then
    rabbitmqctl add_vhost celeryvhost
fi;
rabbitmqctl set_permissions -p celeryvhost celeryuser ".*" ".*" ".*"

mkdir -p /usr/openquake
chmod 1777 /usr/openquake
cp /usr/share/pyshared/openquake/celeryconfig.py /usr/openquake
chmod 666 /usr/openquake/celeryconfig.py

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
